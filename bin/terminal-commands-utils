#! /bin/bash

readonly _VERSION="0.1.0"

#
# Echos text to strerr.
#
# $1: the text to echo
#
function error
{
    echo "$1" >&2
    exit 1
}

#
# Shows the script's man page.
#
function show_help
{
    man "${0##*/}"
    exit 0
}

#
# Print version information
#
# $1: the version
#
function show_version
{
    echo "$1"
    exit 0
}

#
# Prints a usage error.
#
# $@: a list of usage strings
#
function usage_error
{
    if (( $# == 0 )); then
        error "usage_error requires at least one argument"
    fi

    echo "usage: $1"
    local arg=
    for arg in "${@:2}"; do
        echo "   or: $arg"
    done
    exit 1
}

while getopts ":vh-:" opt; do
    case $opt in
        -)
            case "${OPTARG}" in
                version)    show_version "$_VERSION";;
                help)       show_help;;
            esac
            ;;
        v)  show_version "$_VERSION";;
        h)  show_help;;
    esac
done
OPTIND=1
